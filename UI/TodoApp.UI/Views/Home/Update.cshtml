@model WorkUpdateDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container my-2">
    <form asp-action="Update" asp-controller="Home" method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="my-2">
            <label>Discription of Work</label>
            <input asp-for="Definition" class="form-control"/>
        </div>
        <div class="form-check">

            <input class="form-check-input" type="checkbox" asp-for="IsCompleted">
            <label class="form-check-label" for="IsCompleted">
                Completed
            </label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div asp-validation-summary="All" class="text text-danger">

        </div>
    </form>
</div>